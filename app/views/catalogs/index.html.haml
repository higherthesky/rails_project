%h1 Listing catalogs

%table
  %thead
    %tr
      %th Name
      %th Description
      %th
      %th
      %th

  %tbody
    - @posts.each do |catalog|
      %tr
        %td= catalog.name
        %td= catalog.description
        %td= link_to 'Show', catalog, id: "show_record_#{catalog.id}"
        %td= link_to 'Edit', edit_catalog_path(catalog), id: "edit_record_#{catalog.id}"
        %td= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy_record_#{catalog.id}"

%br

= link_to 'New Catalog', new_catalog_path, id: 'new_record'
